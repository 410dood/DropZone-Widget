<?xml version="1.0" encoding="utf-8" ?>
<widget id="DropZone.widget.DropZone" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>DropZone</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="phaseTitle" type="string" required="false" defaultValue="">
            <caption>Title</caption>
            <category>Phase</category>
            <description>The title of this phase.</description>
        </property>
        <property key="entityToSelect" type="entity" allowNonPersistableEntities="true">
            <caption>Entity to select</caption>
            <category>Data Source</category>
            <description>The entity type that is returned as list from the microflow.</description>
        </property>
        <property key="dataSourceMf" type="microflow" required="true" defaultValue="">
            <caption>Data Source Microflow</caption>
            <category>Behavior</category>
            <description>Where are the projects coming from?</description>
            <returnType type="Object" isList="true" entityProperty="entityToSelect"></returnType>
        </property>
        <property key="onDropMf" type="microflow" required="false" defaultValue="">
            <caption>On Drop Microflow</caption>
            <category>Behavior</category>
            <description>The microflow that is triggered when a project is dropped into a new zone.</description>
            <returnType type="Boolean"></returnType>
        </property>
    </properties>
</widget>
